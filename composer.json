{
    "name": "bws/queue-system",
    "minimum-stability": "dev",
    "prefer-stable": true,

    "repositories":
        [
            {"type": "composer", "url": "https://repo.packagist.com/busybusy/"},
            {"packagist": false}
        ],

    "require": {
        "php": "^5.6 || ^7.0",
        "php-di/php-di": "^5.2",
        "aws/aws-sdk-php": "^3.0"
    },

    "require-dev": {
        "phpunit/phpunit": "^5.1",
        "bws/dev": "^1.0.1",
        "bws/build-tools": "^0.1.2",
        "codegyre/robo": "^0.7.2"
    },

    "license": "proprietary",
    "autoload": {
        "psr-4": {
            "Bws\\QueueSystem\\": "src"
        }
    },

    "autoload-dev": {
        "psr-4": {
            "TestData\\": "tests/data",
            "Tests\\": [
                "tests/unit"
            ]
        }
    }
}
